<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.saadat.com.ewlmerge">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />

        <activity
            android:name=".Adapters.ShowItem"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MoreRelatedPackage.ShowItemJson"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Authentications.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Authentications.SignupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MoreRelatedPackage.CheckOutActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".AppIntro.WelcomeActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>
    </application>

</manifest>